services:
  fast-api:
    build:
      context: .
      dockerfile: Dockerfile 
    container_name: location_micro_service
    ports:
      - "8085:8085"
    environment:
      - POSTGRES_USER={{}}
      - POSTGRES_PASSWORD={{}}
      - POSTGRES_DB={{}}
      - POSTGRES_PORT={{}}
      - POSTGRES_HOST_NAME={{}}
      - JWT_SECRET_KEY={{}}
      - JWT_ALGORITHM={{}}
      - REDIS_HOST={{}}
      - REDIS_PORT={{}}
    depends_on: 
      - postgres
      - redis_db
    command: uvicorn app.main:app --reload --host 0.0.0.0 --port 8085
    volumes:
      - ./app:/app/app

  postgres:
    image: postgres:latest
    container_name: postgres_container
    ports:
      - "5433:5432"
    environment:
      - POSTGRES_USER={{}}
      - POSTGRES_PASSWORD={{}}
      - POSTGRES_DB={{}}
    volumes:
      - postgres_data:/var/lib/postgresql/data

  redis_db:
    image: redis:latest
    container_name: redis_container
    ports:
      - "6379:6379"  # Port mapping
    volumes:
      - redis_data:/data

volumes:
  redis_data:
